CC = gcc # compiler
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME =  school # executable
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# make all == makes executable

all : $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

# deletes tmp files & executable

clean :
	$(RM) *~ $(NAME)

# deletes object files

oclean :
	$(RM) $(OBJ)

# deletes all (tmp files, executable, & obj files)

fclean : clean oclean

# forces recompilation

re : fclean all
